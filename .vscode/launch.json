    "version": "0.2.0",
    "configurations": [
        {
            "name": "load",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_IGNORE": "false",
                "LOAD_MAP": "true",
                "SAVE_MAP": "false",
                "START_MAP_GAME": "false",
                "START_MAP_EDITOR": "false"
            }
        },
        {
            "name": "save",
